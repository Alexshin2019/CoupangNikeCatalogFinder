{
  "manifest_version": 3,
  "name": "Coupang Nike Catalog Finder",
  "description": "나이키 모델명으로 쿠팡 내 동일/유사 카탈로그를 찾아 매칭을 돕습니다.",
  "version": "0.1.0",
  "action": {
    "default_title": "Open Catalog Finder"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://www.coupang.com/*",
    "https://seller.coupang.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.coupang.com/*", "https://seller.coupang.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
